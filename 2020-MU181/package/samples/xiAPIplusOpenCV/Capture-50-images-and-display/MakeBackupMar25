CXX=g++
SOURCES=main.cpp
# SOURCES+=xiApiPlusOcv.cpp
OBJECTS=$(SOURCES:.cpp=.o)
PROGRAM=main


all: $(PROGRAM)

$(PROGRAM): main.o 
	g++ -std=gnu++14  $(OBJECTS) -o main -L/usr/local/lib -lm3api -lopencv_core -lopencv_highgui -lopencv_imgproc -lopencv_imgcodecs

main.o: $(SOURCES) 
	g++ -std=gnu++14 -c main.cpp -I . -I /usr/local/include/ -g3 -Wall -c -fmessage-length=0
	
clean:
	rm -f *.o *~ $(PROGRAM) $(OBJECTS)
